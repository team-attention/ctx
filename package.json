{
  "name": "@team-attention/ctx",
  "version": "0.2.21",
  "description": "Context-driven development CLI tool",
  "type": "module",
  "bin": {
    "ctx": "./dist/bin/ctx.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/team-attention/ctx.git"
  },
  "bugs": {
    "url": "https://github.com/team-attention/ctx/issues"
  },
  "homepage": "https://github.com/team-attention/ctx#readme",
  "scripts": {
    "build": "rm -rf dist && tsc --project tsconfig.build.json && cp -r src/templates dist/ && pnpm sync:plugin",
    "sync:plugin": "./scripts/sync-plugin-docs.sh",
    "dev": "tsc --watch --project tsconfig.build.json",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:e2e": "./tests/e2e/run-all.sh",
    "typecheck": "tsc --noEmit",
    "validate": "pnpm typecheck && pnpm build && pnpm test",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [
    "context",
    "documentation",
    "cli",
    "developer-tools"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "glob": "^11.0.3",
    "gray-matter": "^4.0.3",
    "inquirer": "^9.2.15",
    "minimatch": "^10.1.1",
    "yaml": "^2.4.0"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@types/glob": "^9.0.0",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  }
}
